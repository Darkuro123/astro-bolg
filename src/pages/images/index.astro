---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";

import post05 from '../../assets/images/post-05.png'
import post01 from '@images/post-01.png'
import { Picture } from "astro:assets";
---

<Layout title="ImÃ¡genes">
    <h1 class="text-5xl text-white">Imagenes</h1>

    <img loading="eager" src="/assets/images/post-05.png" width="250" height="250" alt="">
    

    <Image src={post05} style={{width:'250px', height: '250px'}} width="500" height="500" alt="Imagen del post"/>
    <h1 class="text-white mt-10">Quality low</h1>
    <Image src={post05} quality="low" width="250" height="250" alt="Imagen del post"/>
    <h1 class="text-white mt-10">Quality mid</h1>
    <Image src={post05} quality="mid" width="250" height="250" alt="Imagen del post"/>
    <h1 class="text-white mt-10">Quality high</h1>
    <Image src={post05} quality="high" width="250" height="250" alt="Imagen del post"/>
    <h1 class="text-white mt-10">Quality max</h1>
    <Image src={post05} quality="max" width="250" height="250" alt="Imagen del post"/>
    <h1 class="text-white mt-10">fortmats</h1>
    <Image src={post05} format="avif" width="250" height="250" alt="Imagen del post"/>
    <h1 class="text-white mt-10">Picture</h1>
    <!-- formats={['webp','avif','jpeg']}  -->
    <!-- widths={[240,540,720, post05.width]} 
