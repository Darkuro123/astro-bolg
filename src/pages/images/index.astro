    src={post05}
     width="250"
     height="250" alt="Imagen del post"
     width={post05.width / 2}
     densities={[1.5,2]}
     />

    <div style={{
        height: '3000px'
    }}></div>
    
    <img loading="lazy" src="/assets/images/post-05.png" width="250" height="250" alt="">
